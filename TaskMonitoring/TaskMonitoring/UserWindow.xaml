<Window x:Class="TaskMonitoring.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Monitoring" Height="500" Width="900">
    <Window.Resources>
        <!-- Style for 'Insert Task' Button -->
        <Style x:Key="InsertTaskButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Style for 'Reload Tasks' Button -->
        <Style x:Key="ReloadTasksButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Toolbar Buttons -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <Button Content="Insert Task" Click="TestConnection_Click" Style="{StaticResource InsertTaskButtonStyle}" />
            <Button Content="Reload Tasks" Click="ReloadButton_Click" Style="{StaticResource ReloadTasksButtonStyle}" />
        </StackPanel>

        <!-- DataGrid with ContextMenu -->
        <DataGrid ItemsSource="{Binding Tasks}" AutoGenerateColumns="False" Margin="10"
                  IsReadOnly="True" AlternatingRowBackground="LightGray"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Initiator" Binding="{Binding Initiator}" Width="100"/>
                <DataGridTextColumn Header="Project" Binding="{Binding Project}" Width="100"/>
                <DataGridTextColumn Header="Content" Binding="{Binding Content}" Width="200"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="150"/>
                
                <!-- Custom Column for Three Dot Menu -->
                <DataGridTemplateColumn Header="Actions" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="..." HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Click="ThreeDotButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
